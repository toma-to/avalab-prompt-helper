{
  "manifest_version": 3,
  "name": "Avalab.aiプロンプト入力支援ツール",
  "description": "Avalab.aiのプロンプト入力を補助する拡張機能",
  "version": "1.1",
  "permissions": ["storage"],
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://avalab.ai/generate"],
      "js": ["content_scripts.js"]
    }
  ]
}
